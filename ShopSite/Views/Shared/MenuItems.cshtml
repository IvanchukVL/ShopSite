@using BLShopSite
@model List<vMenu>
@{
    string Drop = "";
}

<ul class="dropdown-menu" >
    @foreach (var mi in Model)
    {
        Drop = mi.IsSubMenu == true ? "dropdown" : "dropdown";
    <li>
        <a href="@Url.Action(mi.Command,"Pages")" class="dropdown-toggle" data-toggle="dropdown">@mi.Name</a>
        @if (mi.IsSubMenu)
        {
            <span class="caret"></span>
            @await Component.InvokeAsync("cMenuItems", mi.Id)
        }
    </li>
    }
</ul>
