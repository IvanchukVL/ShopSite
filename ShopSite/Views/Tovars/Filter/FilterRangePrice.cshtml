@using DBShopSite.Views
@{
    string Id = $"fi_{ViewBag.FilterKindCode}_{ViewBag.FilterId}";
    decimal MinValue = 0, MaxValue = 0;
    string Unit = "";
    try
    {
        MinValue = Convert.ToDecimal(((List<ViewFiltersAtribute>)ViewBag.FilterAtributes).First(x => x.Code == "MinValue").Value);
        MaxValue = Convert.ToDecimal(((List<ViewFiltersAtribute>)ViewBag.FilterAtributes).First(x => x.Code == "MaxValue").Value);
        Unit = ((List<ViewFiltersAtribute>)ViewBag.FilterAtributes).First(x => x.Code == "Unit").Value.ToString();
    }
    catch (Exception err)
    {

    }

}

<b>@ViewBag.FilterName</b>
<br />

<br />
<b>@string.Format("{0}{1}", MinValue.ToString(), Unit)</b>
<br />
<input id=@Id type="text" class="FilterItem" value="" data-slider-min=@MinValue.ToString() data-slider-max=@MaxValue.ToString() data-slider-step="5" data-slider-value=@string.Format("[{0},{1}]",MinValue.ToString(),MaxValue.ToString()) />
<br />
<b>@string.Format("{0}{1}", MaxValue.ToString(), Unit)</b>
